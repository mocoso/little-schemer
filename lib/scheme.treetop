grammar Scheme
  rule sexp
    atom / quoted_null_list / list
  end

  rule list
    '(' sexps:(sexp ' '?)* ')' {
      def to_ast
        list_contents = sexps.elements.map{|element| element.sexp.to_ast }
        List.new(*list_contents)
      end
    }
  end

  rule atom
    [^\s()]+ {
      def to_ast
        Atom.new(text_value.to_sym)
      end
    }
  end

  rule quoted_null_list
    '(quote ())' {
      def to_ast
        List.new
      end
    }
  end
end
